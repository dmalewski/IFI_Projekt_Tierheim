<!--
    >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
    Template für die Ausgabe der Tierobjekte nach eingeschränkter Anzahl und 
    Angabe einer angepassten Seitenzahlnavigation 
    >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
-->

<% if (pagesCount) { %>
      <div class="paginationContainer">
            <% let k = currentPage; %>
            <% if(currentPage > 0) { %>
                  <a href="/sucher_erg/<%= k - 1 %>">&laquo;</a> 
            <% } %>  

            <% for (let i = 0; i < pagesCount; i++) { %>
              <a href="/suche_erg/<%= i %>"><%= i + 1 %></a>
            <% } %>
            
            <% if(currentPage < pagesCount-1) { %>
                  <% j++; %>
                  <a href="/suche_erg/<%= k %>">&raquo;</a> 
            <% } %>          
      </div>
<% } %>
